{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "cl.exe build active file",
			"command": "cl.exe",
			"args": [
				"/Zi",
				"/MDd", // Use /MDd or /MTd to define _DEBUG and allow _CrtDumpMemoryLeaks()
				"/EHsc",
				"/Fe:",
				"${workspaceFolder}\\cppix.exe",
				"${workspaceFolder}\\src\\main.cpp"
			],
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}